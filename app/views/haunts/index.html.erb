<div class="container">
  <h3>Welcome: <%= current_user.email %></h3>
  <h1>Haunt Directory</h1>
  <%= link_to "Add A Haunt", new_haunt_path, :class => "btn btn-primary btn-sm" %>
</div><br />

<table class="table table-bordered" style="width: 90%; margin: auto" >

  <thead>
    <tr>
    
      <th scope="col">Location</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <% @haunts.reverse.each do |haunt| %>
      <tr>
        <td><%= haunt.name %></td> 
        <td><%= haunt.city %></td> 
        <td><%= haunt.state %></td> 
        <td><%= haunt.description %></td> 
 
        <td><%= link_to 'See Reviews', haunt_comments_path(haunt), :class => "btn btn-primary btn-sm"  %></td>
        <td><%= link_to 'Add A Review', new_haunt_comment_path(haunt), :class => "btn btn-primary btn-sm" %></td>

        <% if haunt && haunt.user == current_user %>
          <td><%= link_to 'Edit', edit_haunt_path(haunt), :class => "btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Delete', haunt, method: :delete, data: { confirm: 'Are you sure?! There is no going back! MWAHAHAHA!' }, :class => "btn btn-primary btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

