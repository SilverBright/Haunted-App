<div class="container">
  <h3>Welcome: <%= current_user.email %> </h3>
  <h1>User Reviews</h1>
</div>

<table class="table table-bordered" style="width: 90%; margin: auto" >
  <thead>
    <tr>
      <th>Location</th>
      <th>Descrption</th>
    </tr>
  </thead>
  <tbody> 
    <tr>
      <td><%= @haunt.name %></td>
      <td><%= @haunt.description %></td>
    </tr>
  </tbody>
</table> 

<br />

<table class="table table-bordered" style="width: 90%; margin: auto" >
  <thead>
    <tr>
      <th>REVIEWS</th>    
    </tr>
  </thead>
  <div class ="container">
    <%= link_to 'Add A Review', new_haunt_comment_path(@haunt), :class => "btn btn-primary btn-sm" %>
  </div>
  <br />
  <tbody> 
    <% @haunt.comments.each do |comment| %>
      <tr>
      <td><strong><%= comment.user.email %></strong> says: <i><%= comment.content %></i> </td>
    <% end %> 
    </tr>  
  </tbody>
</table>